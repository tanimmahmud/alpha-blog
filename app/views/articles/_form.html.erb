<% if @article.errors.any? %>
  <h2>The following errors prevented the article from getting created</h2>
  <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
<% end %>

<div class="row">
  <div class="col-xm-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: 'form-control', placeholder: 'Title of the Article' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: 'Content of the Article' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
  </div>
</div>

<% end %>

<div class="text-center">
  [ <%= link_to 'Cancle request and return to articles listing', articles_path %> ]
</div>
