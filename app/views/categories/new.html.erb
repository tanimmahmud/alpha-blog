<h1 class="text-center">Create new category</h1>

<%= render 'shared/errors', obj: @category %>

<div class="row">
  <div class="col-xm-12">
    <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Enter category name' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg'%>
        </div>
      </div>
  </div>
</div>

<% end %>

<div class="text-center">
  [ <%= link_to 'Cancle request and return to articles listing', articles_path %> ]
</div>
