<h1 class="text-center">All CF Bloggers</h1>
<div class="text-center">
  <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
</div>
<% @users.each do |user| %>
  <ul class="listing text-center list-unstyled">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li><%= link_to gravatar_for(user), user_path(user) %></li>
        <li class="article-title">
          <%= link_to user.username, user_path(user) %>
        </li>
        <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
        <% if logged_in? && current_user.admin? %>
          <li><%= link_to 'Delete this user', user_path(user), method: :delete,
                  data: { confirm: "Are you sure you want to delete #{user.username} and all their articles?"}%></li> 
        <% end %>
      </div>
    </div>
  </ul>
<% end %>
<div class="text-center">
  <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
</div>
